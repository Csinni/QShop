<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluestar_bg"
    tools:context=".Admin.AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/skin_care"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/skincare"/>

        <ImageView
            android:id="@+id/pack_mask"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/packmask"/>

        <ImageView
            android:id="@+id/make_up"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/makeup"/>

        <ImageView
            android:id="@+id/beauty_tools"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/beautytools"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1_categorytext_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="114dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:id="@+id/skincare"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Skincare"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/packmask"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:text="Mask"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/makeup"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:text="Make Up"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/beautytools"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Beauty Tools"
            android:textSize="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/body_care"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/bodycare"/>

        <ImageView
            android:id="@+id/hair_care"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/hair"/>

        <ImageView
            android:id="@+id/bath_body"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/bathbody"/>

        <ImageView
            android:id="@+id/health_wellness"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/health"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_categorytext_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="245dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <TextView
            android:id="@+id/bodycare"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Body Care"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/haircare"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:text="Hair Care"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/bathbody"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:text="Bath &#38; Body"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/healthwellness"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Health &#38; Wellness"
            android:textSize="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/medicine"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/medicine"/>

        <ImageView
            android:id="@+id/face_mask"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/facemask"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_categorytext_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

    <TextView
        android:id="@+id/medicine1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:padding="9dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Medicine"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/facemask"
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="Facemask &#38; Sanitizer"
        android:textSize="15dp"
        />
    </LinearLayout>





    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttons"
        android:text="Check New Orders"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        />


    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimaryDark"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false"
        />


</RelativeLayout>

